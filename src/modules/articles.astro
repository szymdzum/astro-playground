    align-items: stretch;
  }
  .articles-container article {
    flex: 1;
    padding: 1rem;
    margin: 0.5rem;
    box-sizing: border-box;
  }
  .articles-container article h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
  }
</style>

